{
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": true,
    "preserveConstEnums": true,
    "allowUnreachableCode": true,
    "disableSizeLimit": true,
    
    "target": "esnext",
    "moduleResolution": "node",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,

    "outDir": "dist/",

    //"rootDir": ".",
    "rootDirs": [".", "build/node_modules/"],
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "*": [ "build/node_modules/@types/*" ],
      "tslib": [ "build/node_modules/tslib/tslib.d.ts" ],
      "src/*": [ "src/*" ],
      "shell/*": [ "src/app-shell/*" ],
      "comp/*": [ "src/components/*" ],
      "store/*": [ "src/store/*" ],
    },
    //"typeRoots": ["build/node_modules"]
  },
  "include": [ "src/**/*" ]
}